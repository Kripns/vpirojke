"ctrl+shift+l"      //Выбрать все вхождения найденных совпадений
"ctrl+D"            //выбрать совпадения

"ctrl+`" "shift+t"  //открыть терминал

"ctrl+shift+i"      //форматировать
"ctrl+K ctrl+F"     //Форматировать выделенный фрагмент
"ctrl+shift+R"      //рефакторинг

"ctrl+B"            //скрыть боковую панель
"ctrl+W"            //закрыть редактор
"ctrl+k z"          //Включить/отключить режим "Дзен"



